<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/expressionTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="end|bottom"
        android:padding="16dp"
        android:textSize="48sp"
        android:textColor="@android:color/white"
        tools:text="sin(90)" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="16dp"
        android:textColor="#4CAF50"
        android:textSize="32sp"
        tools:text="1" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:padding="8dp">

        <Button android:id="@+id/buttonSin" android:text="sin" style="@style/CalculatorButton.Scientific" />
        <Button android:id="@+id/buttonCos" android:text="cos" style="@style/CalculatorButton.Scientific" />
        <Button android:id="@+id/buttonTan" android:text="tan" style="@style/CalculatorButton.Scientific" />
        <Button
            android:id="@+id/buttonFactorial"
            style="@style/CalculatorButton.Scientific"
            android:text="x!" />
        <Button android:id="@+id/buttonAC" android:text="AC" style="@style/CalculatorButton.Clear" />

        <Button android:id="@+id/buttonLog" android:text="log" style="@style/CalculatorButton.Scientific" />
        <Button android:id="@+id/buttonLn" android:text="ln" style="@style/CalculatorButton.Scientific" />
        <Button android:id="@+id/buttonLeftParen" android:text="(" style="@style/CalculatorButton.Scientific" />
        <Button android:id="@+id/buttonRightParen" android:text=")" style="@style/CalculatorButton.Scientific" />
        <Button android:id="@+id/buttonBackspace" android:text="⌫" style="@style/CalculatorButton.Operator" />

        <Button android:id="@+id/buttonPower" android:text="x^y" style="@style/CalculatorButton.Scientific" />
        <Button android:id="@+id/buttonInverse" android:text="1/x" style="@style/CalculatorButton.Scientific" />
        <Button android:id="@+id/buttonPi" android:text="π" style="@style/CalculatorButton.Scientific" />
        <Button android:id="@+id/buttonE" android:text="e" style="@style/CalculatorButton.Scientific" />
        <Button android:id="@+id/buttonDivide" android:text="÷" style="@style/CalculatorButton.Operator" />

        <Button android:id="@+id/button7" android:text="7" style="@style/CalculatorButton.Number" />
        <Button android:id="@+id/button8" android:text="8" style="@style/CalculatorButton.Number" />
        <Button android:id="@+id/button9" android:text="9" style="@style/CalculatorButton.Number" />
        <Button android:id="@+id/buttonPercent" android:text="%" style="@style/CalculatorButton.Operator" />
        <Button android:id="@+id/buttonMultiply" android:text="×" style="@style/CalculatorButton.Operator" />

        <Button android:id="@+id/button4" android:text="4" style="@style/CalculatorButton.Number" />
        <Button android:id="@+id/button5" android:text="5" style="@style/CalculatorButton.Number" />
        <Button android:id="@+id/button6" android:text="6" style="@style/CalculatorButton.Number" />
        <Button android:id="@+id/buttonAdd" android:text="+" style="@style/CalculatorButton.Operator" />
        <Button android:id="@+id/buttonSubtract" android:text="-" style="@style/CalculatorButton.Operator" />

        <Button android:id="@+id/button1" android:text="1" style="@style/CalculatorButton.Number" />
        <Button android:id="@+id/button2" android:text="2" style="@style/CalculatorButton.Number" />
        <Button android:id="@+id/button3" android:text="3" style="@style/CalculatorButton.Number" />
        <Button android:id="@+id/button0" android:text="0" style="@style/CalculatorButton.Number" />
        <Button android:id="@+id/buttonDot" android:text="." style="@style/CalculatorButton.Number" />

        <Button android:id="@+id/buttonEquals" android:text="=" style="@style/CalculatorButton.Equals" android:layout_columnSpan="5" android:layout_gravity="fill_horizontal" />

    </GridLayout>

</LinearLayout>